<div style="width: 400px; margin-left: 400px;">
<!-- <p id="notice"><%#= notice %></p> -->
<h3>Book Categories</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to '', category, :class => "show_category" %></td>
        <td><%= link_to '', edit_category_path(category), :class => "edit_category_link" %></td>
        <td><%= link_to '', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "delete_category" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Category', new_category_path %>
</div>