<div style="margin-left: 400px; margin-top: 70px;">
<%= form_for :book, :url => books_path, :html => { :multipart => true } do |f| %>
  
  <%= f.label :title %><br />
  <%= f.text_field :title , :class => "text_field_library"%><br />

  <%= f.label :description %><br />
  <%= f.text_field :description, :class => "text_field_library" %><br />
  
  <%= f.label :category %><br />
  <%= f.text_field :category , :class => "text_field_library"%><br />

  <%= f.label :book_image %><br />
  <%= f.file_field :book_image, :class => "text_field_library" %><br />
  
  <%= f.submit :save%>

<% end %>
</div>