<%= form_for @book, :url => {:controller => "books", :action => "update"}, :html => { :multipart => true }, method: :patch do |f| %>
  <%= f.label :book_image %><br />
  <%= f.file_field :book_image %><br />
  
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />

  <%= f.label :description %><br />
  <%= f.text_field :description %><br />
  
  <%= f.label :category %><br />
  <%= f.text_field :category %><br />
  
  <%= f.submit :update%>

<% end %>