<div style="width: 600px; margin-top: 15px; margin-left: 400px;">
<h3>User List</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
    <% if u.email != current_user.email %>
      <tr>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= link_to '', { action: :destroy_user, id: u.id }, method: :delete, data: { confirm: 'Are you sure?' } , :class => "delete_user"%></td>
      </tr>
     <% end %> 
    <% end %>
  </tbody>
</table>
</div>